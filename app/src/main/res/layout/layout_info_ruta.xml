<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/drawable_fondoinfo">

    <TextView
        android:id="@+id/lv_tiempo"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/tiempo_estimado"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tx_tiempoEstimado"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/calculando"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_tiempo"/>
    <TextView
        android:id="@+id/lv_distancia"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/distancia_estimada"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_tiempoEstimado"/>
    <TextView
        android:id="@+id/tx_distanciaEstimado"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/calculando"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_distancia"/>
    <Button
        android:id="@+id/btn_nuevaNuta"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:text="@string/nueva_ruta"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>